{
  "version": "0.2.0",
  "configurations": [
    {
        "type": "node",
        "request": "launch",
        "program": "${workspaceFolder}/node_modules/@cucumber/cucumber/bin/cucumber-js",
        "args": ["${relativeFile}"],
        "name": "Cukes feature",
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "windows": {
            "program": "${workspaceFolder}/node_modules/@cucumber/cucumber/bin/cucumber-js"
        }
    },
    {
        "type": "node",
        "request": "launch",
        "program": "${workspaceFolder}/node_modules/@cucumber/cucumber/bin/cucumber-js",
        "args": ["--tags", "@only"],
        "name": "Cukes only",
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "windows": {
            "program": "${workspaceFolder}/node_modules/@cucumber/cucumber/bin/cucumber-js"
        }
    },
  ]
}